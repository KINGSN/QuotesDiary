<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <com.royal.attitude.status.utils.StatusBarView
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_grt_status_bar" />

    <com.theartofdev.edmodo.cropper.CropImageView
        android:id="@+id/iv_crop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/statusBar"/>

    <ImageView
        android:id="@+id/iv_back_crop"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_back"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/image"
        android:layout_below="@+id/statusBar"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_setwallpaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        app:fabSize="normal"
        android:src="@mipmap/setwall"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        app:backgroundTint="@color/fab_button"/>

</RelativeLayout>