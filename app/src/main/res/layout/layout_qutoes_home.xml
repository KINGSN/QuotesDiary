<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="false"
    app:contentPadding="0dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_quotes_home"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            app:riv_corner_radius="5dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/bg_blackgradient"
            android:layout_alignParentBottom="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="7dp"
            android:layout_alignParentBottom="true">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/ic_like_grey_hover"
                android:contentDescription="@string/image"/>

            <TextView
                android:id="@+id/tv_home_like"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/font_light"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/ic_view"
                android:contentDescription="@string/image"/>

            <TextView
                android:id="@+id/tv_home_views"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/font_light"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/ic_download_orange"
                android:contentDescription="@string/image"/>

            <TextView
                android:id="@+id/tv_home_download"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:fontFamily="@font/font_light"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>