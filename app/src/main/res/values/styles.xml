<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textAppearanceMedium">@style/TextAppearanceAlertDialog</item>
        <item name="android:textAppearanceLarge">@style/TextAppearanceAlertDialog</item>
        <item name="android:textAppearanceSmall">@style/TextAppearanceAlertDialog</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <style name="NavigationDrawer">
        <item name="android:fontFamily">@font/font_reg</item>
        <!--<item name="listPreferredItemHeightSmall">47dp</item>&lt;!&ndash; menu item height- vary as u need &ndash;&gt;-->
    </style>

    <style name="TextLabel" parent="AppTheme">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/white50</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="TextLabel_Grey" parent="AppTheme">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/black90_night</item>
        <item name="colorAccent">@color/black90_night</item>
    </style>

    <style name="MySeekBarTheme" parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/white</item>
        <item name="android:colorActivatedHighlight">@color/colorPrimary</item>
    </style>

    <style name="AlertDialogTheme" parent="@style/Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:textAppearanceSmall">@style/TextAppearanceAlertDialog</item>
        <item name="android:textAppearanceMedium">@style/TextAppearanceAlertDialog</item>
        <item name="android:textAppearanceLarge">@style/TextAppearanceAlertDialog</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#00f</item>
        <item name="android:fontFamily">@font/font_light</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#f00</item>
        <item name="android:fontFamily">@font/font_light</item>
    </style>

    <style name="TextAppearanceAlertDialog" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/font_reg</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_down_dialog</item>
    </style>

    <style name="Tablayout" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/font_reg</item>
    </style>

</resources>